<% layout('layouts/boilerplate') %>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <!-- grouping everything under campground to have it sent under the campground -->
            <input type="text" id="title" name="campground[title]">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]">
        </div>
        <button>New Campground</button>
    </form>
    <a href="/campgrounds">Cancel</a>